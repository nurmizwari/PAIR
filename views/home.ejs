<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>


<div class="search-container">
    <form action="/home">
        <input type="text" placeholder="Search" name="name" value="<%= name%>">
        <button type="submit">Submit</button>
    </form>
</div>

<body>
    <a class="nav-link" href="/logout"><button>logout</button></a>


    <table class="table table-borderless">
        <tr>
            <th>Name</th>
            <th>Stock</th>
            <th>Nama Toko</th>
            <th class="text-center">Action</th>

        </tr>
        <%result.map(e=>{ %>

            <tr>
                <td>
                    <%= e.name %>
                </td>
                <td>
                    <%= e.stock %>
                </td>
                <td>
                    <%= e.Store.name %>
                </td>
                <td class="text-center">
                    <% if(role.toLowerCase()=='admin' ){%>

                        <a href="/home/<%=e.id%>/delete"><button class="btn btn-danger">Delete</button></a>
                        <% } %>
                            <a href="/home/<%= e.id  %>/add"><button class="btn btn-success">Add Stock</button></a>
                            <a href="/home/add"><button class="btn btn-success">Add Product</button></a>
                </td>
            </tr>
            <% }) %>


    </table>
</body>

</html>